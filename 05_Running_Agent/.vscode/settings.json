{
  // ğŸ”¹ Auto Save (save automatically after delay)
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  // ğŸ”¹ Format code automatically on save
  "editor.formatOnSave": true,
  // ğŸ”¹ Show spaces, tabs, line endings (helpful for debugging)
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  // ğŸ”¹ Indentation settings
  "editor.tabSize": 2,
  "editor.insertSpaces": true, // use spaces instead of tabs
  // ğŸ”¹ Word wrap (long lines wrap automatically)
  "editor.wordWrap": "on",
  // ğŸ”¹ Minimap (disable if distracting)
  "editor.minimap.enabled": false,
  // ğŸ”¹ Auto imports & code actions
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  // ğŸ”¹ Enable breadcrumbs (navigation at top of editor)
  "breadcrumbs.enabled": true,
  // ğŸ”¹ Show git changes in gutter
  "git.decorations.enabled": true,
  // ğŸ”¹ Trim extra spaces automatically
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true
}
